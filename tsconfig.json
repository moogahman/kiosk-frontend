{
    "compilerOptions": {
        /* Base Options */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "isolatedModules": true,
        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "module": "NodeNext",
        "target": "es2022",
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "sourceMap": true,
        "lib": ["es2022", "dom", "dom.iterable"]
    },
    "include": ["./src", "jest.config.mjs"],
    "exclude": ["./node_modules", "./dist"]
}
